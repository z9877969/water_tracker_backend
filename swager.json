        "properties": {}
      },
      "UpdateWaterNoteResponse": {
        "required": [],
        "type": "object",
        "properties": {}
      },
      "RemoveWaterNoteResponse": {
        "required": [],
        "type": "object",
        "properties": {}
      },
      "GetStatsWaterNotesByCurrentDayResponse": {
        "required": [],
        "type": "object",
        "properties": {}
      },
      "GetStatsWaterNotesByChoosedMonthResponse": {
        "required": [],
        "type": "object",
        "properties": {}
      }
    }
  }
}
